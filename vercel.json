{
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "dist/public",
  "framework": null,
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 